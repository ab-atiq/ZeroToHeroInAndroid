<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisibilityCreate"
    android:orientation="vertical"
    android:id="@+id/layoutGone">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageVisibilityCheck"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/bd_flag"
                android:scaleType="center"
                />
            <Button
                android:id="@+id/imageInvisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image Invisible"
                android:textSize="20dp"
                android:padding="10dp"
                />
            <Button
                android:id="@+id/imageVisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image Visible"
                android:textSize="20dp"
                android:padding="10dp"
                />
            <Button
                android:id="@+id/imageGone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image Gone"
                android:textSize="20dp"
                android:padding="10dp"
                />
            <Button
                android:id="@+id/fullLayoutGone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Layout Gone"
                android:textSize="20dp"
                android:padding="10dp"
                />
        </LinearLayout>
    </ScrollView>



</LinearLayout>