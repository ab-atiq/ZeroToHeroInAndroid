<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a flag of Bangladesh"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_above="@+id/centerImage"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red and Green color mixed"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_below="@+id/centerImage"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:src="@drawable/bd_flag"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like_icon"
            android:padding="10dp"
            android:background="@drawable/circle_colored"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>


</LinearLayout>